<config>
    <modules>
        <Sag_Shippingmessage>
            <version>1.0.0</version>
        </Sag_Shippingmessage>
    </modules>
	<frontend>
        <layout>
            <updates>
                <shippingmessage>
                    <file>shippingmessage.xml</file>
                </shippingmessage>
            </updates>
        </layout>
    </frontend>
	<admin>
        <routers>
			<shippingmessage>
				<use>admin</use>
				<args>
					<module>Sag_Shippingmessage</module>
					<frontName>shippingmessage</frontName>
				</args>
			</shippingmessage>
        </routers>
    </admin>
    <adminhtml>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<sagshippingmessage translate="title">
											<title>Sag Free Shipping Message</title>
											<sort_order>1</sort_order>
										</sagshippingmessage>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
    </adminhtml>   
    <global>
        <blocks>
            <shippingmessage>
                <class>Sag_Shippingmessage_Block</class>
            </shippingmessage>
        </blocks>
        <helpers>
            <shippingmessage>
                <class>Sag_Shippingmessage_Helper</class>
            </shippingmessage>
        </helpers>
    </global>
</config>